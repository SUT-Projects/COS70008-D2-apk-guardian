  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger (app.py) - Flask Backend",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/app.py",
      "console": "integratedTerminal",
      "env": {
        "FLASK_APP": "${workspaceFolder}/backend/app.py",
        "FLASK_ENV": "development"
      },
    }
  ]
}